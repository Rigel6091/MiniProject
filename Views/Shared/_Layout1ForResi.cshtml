<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <form action="action_page.php">
            <div class="form_wrapper">
                <div class="form_container">
                    <div class="title_container">
                        <h2>Registration Form</h2>
                    </div>
                    <div class="row clearfix">
                        <div class="">
                            <form>
                                <div class="input_field">
                                    <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                                    <input type="login name" name="login name" placeholder="Login Name" required />
                                </div>
                                
                                <div class="input_field">
                                    <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                                    <input type="password" name="password" placeholder="Password" required />
                                </div>
                                
                                <div class="input_field">
                                    <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                                    <input type="email" name="email" placeholder="Email"accept="Email" required />
                                </div>
                                
                                <div class="input_field">
                                    <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                                    <input type="CityId" name="CityId" placeholder="CityId" accept="CityId" required />
                                </div>



                               <div class="row clearfix">
                                    <div class="col_half">
                                        <div class="input_field">
                                            <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                            <input type="text" name="Phone Number" placeholder="Phone Number" />
                                        </div>
                                    </div>
                                    <div class="col_half">
                                        <div class="input_field">
                                            <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                            <input type="text" name="Fullname" placeholder="Full Name" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="input_field radio_option">
                                    <input type="radio" name="radiogroup1" id="rd1">
                                    <label for="rd1">Male</label>
                                    <input type="radio" name="radiogroup1" id="rd2">
                                    <label for="rd2">Female</label>
                                      <input type="radio" name="radiogroup1" id="rd2">
                                    <label for="rd2">Others</label>
                                </div>
                                <div class="input_field select_option">
                                    <select>
                                        <option>Select City Name</option>
                                        <option>Option 1</option>
                                        <option>Option 2</option>
                                    </select>
                                    <div class="select_arrow"></div>
                                </div>
                                <input class="button" type="submit" value="Register" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</body>
</html>