@model MiniProject.Models.ResisterUser

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align = "center">Registration Form</h1>


<hr />
<div class="row"  style="border:0px solid #ccc; background-color: white;">
    <div class="col-md-4"  style="padding: 16px; background-color: grey; color:white; border:2px solid black;margin-left:33.5%;">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control" required />
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" required />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" size="10" required />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                @Html.DropDownListFor(m => m.CityId, Model.drdncity)<br>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Gender " class="control-label"></label>
                <input type="radio" value="Male" name="gender" checked > Male 
                <input type="radio" value="Female" name="gender"> Female 
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <br />
            <br />
            @if (ViewBag.isTrue)
            {
               <div align = "center" role="alert">
                  Successfully Resistered
               </div>
            }
            <br />
            <div align="center"  class="form-group">
                <input type="submit"  value="Register" class="btn btn-primary" /> <br />
                Already have an Account <a style="color:white;" asp-action="Login" formtarget="_blank">Login Page</a>
            </div>
        </form>
       
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}